{
  "name": "nimbus-mcp",
  "version": "1.5.8",
  "description": "Nimbus - AWS Security Assessment MCP Server - 45 Tools with Full OWASP MCP Security",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "prepare": "npm run build"
  },
  "keywords": [
    "aws",
    "security",
    "penetration-testing",
    "mcp",
    "aws-security",
    "cybersecurity",
    "s3",
    "ec2",
    "iam"
  ],
  "author": "h4cd0c",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/h4cd0c/nimbus-mcp"
  },
  "homepage": "https://github.com/h4cd0c/nimbus-mcp#readme",
  "bugs": {
    "url": "https://github.com/h4cd0c/nimbus-mcp/issues"
  },
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.700.0",
    "@aws-sdk/client-cloudformation": "^3.948.0",
    "@aws-sdk/client-cloudfront": "^3.700.0",
    "@aws-sdk/client-cloudtrail": "^3.700.0",
    "@aws-sdk/client-cloudwatch": "^3.949.0",
    "@aws-sdk/client-cognito-identity": "^3.700.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.700.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-ec2": "^3.700.0",
    "@aws-sdk/client-eks": "^3.700.0",
    "@aws-sdk/client-elasticache": "^3.700.0",
    "@aws-sdk/client-guardduty": "^3.700.0",
    "@aws-sdk/client-iam": "^3.700.0",
    "@aws-sdk/client-kms": "^3.700.0",
    "@aws-sdk/client-lambda": "^3.700.0",
    "@aws-sdk/client-organizations": "^3.700.0",
    "@aws-sdk/client-rds": "^3.700.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/client-secrets-manager": "^3.700.0",
    "@aws-sdk/client-sns": "^3.700.0",
    "@aws-sdk/client-sqs": "^3.700.0",
    "@aws-sdk/client-sts": "^3.700.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "csv-writer": "^1.6.0",
    "exceljs": "^4.4.0",
    "marked": "^15.0.7",
    "pdfkit": "^0.15.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.0",
    "@types/pdfkit": "^0.13.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
